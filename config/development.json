{
  "settings": {
    "debug": true,
    "logger": {
      "format": "dev"
    }
  },
  "database": {
    "type": "env(DATABASE_TYPE)",
    "host": "env(DATABASE_HOST)",
    "port": "env(DATABASE_PORT)",
    "username": "env(DATABASE_USERNAME)",
    "password": "env(DATABASE_PASSWORD)",
    "database": "env(DATABASE_NAME)",
    "synchronize": true,
    "logging": true,
    "dropSchema": false,
    "pool": {
      "max": 10,
      "min": 2,
      "idleTimeout": 30000,
      "connectionTimeout": 2000,
      "maxLifetime": 600000
    }
  }
}
